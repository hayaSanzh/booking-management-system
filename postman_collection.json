{
  "info": {
    "name": "Booking Management System",
    "description": "REST API for booking resources",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080/api/v1"
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"n.sanzhar06@gmail.com\",\n  \"password\": \"password123\",\n  \"fullName\": \"Nurmukhanbet Sanzhar\"\n}"
            },
            "url": "{{baseUrl}}/auth/register"
          }
        },
        {
          "name": "Register Admin",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"admin123\",\n  \"fullName\": \"Admin User\"\n}"
            },
            "url": "{{baseUrl}}/auth/register"
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set('token', jsonData.accessToken);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"n.sanzhar06@gmail.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": "{{baseUrl}}/auth/login"
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": "{{baseUrl}}/auth/me"
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get My Profile",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": "{{baseUrl}}/users/me"
          }
        },
        {
          "name": "Update My Profile",
          "request": {
            "method": "PATCH",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"Sanzh Updated\"\n}"
            },
            "url": "{{baseUrl}}/users/me"
          }
        }
      ]
    },
    {
      "name": "Resources",
      "item": [
        {
          "name": "List Resources",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": {
              "raw": "{{baseUrl}}/resources?page=0&size=20",
              "host": ["{{baseUrl}}"],
              "path": ["resources"],
              "query": [
                {"key": "page", "value": "0"},
                {"key": "size", "value": "20"},
                {"key": "name", "value": "", "disabled": true},
                {"key": "capacityMin", "value": "", "disabled": true}
              ]
            }
          }
        },
        {
          "name": "Get Resource by ID",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": "{{baseUrl}}/resources/1"
          }
        },
        {
          "name": "Create Resource (ADMIN)",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Conference Room A\",\n  \"location\": \"Floor 1\",\n  \"capacity\": 10,\n  \"description\": \"Main conference room\"\n}"
            },
            "url": "{{baseUrl}}/resources"
          }
        },
        {
          "name": "Update Resource (ADMIN)",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Conference Room A Updated\",\n  \"location\": \"Floor 1\",\n  \"capacity\": 15\n}"
            },
            "url": "{{baseUrl}}/resources/1"
          }
        },
        {
          "name": "Delete Resource (ADMIN)",
          "request": {
            "method": "DELETE",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": "{{baseUrl}}/resources/1"
          }
        }
      ]
    },
    {
      "name": "Bookings",
      "item": [
        {
          "name": "Create Booking",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"resourceId\": 1,\n  \"startAt\": \"2026-02-10T10:00:00\",\n  \"endAt\": \"2026-02-10T11:00:00\",\n  \"description\": \"Team meeting\"\n}"
            },
            "url": "{{baseUrl}}/bookings"
          }
        },
        {
          "name": "List My Bookings",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": {
              "raw": "{{baseUrl}}/bookings?page=0&size=20",
              "host": ["{{baseUrl}}"],
              "path": ["bookings"],
              "query": [
                {"key": "page", "value": "0"},
                {"key": "size", "value": "20"},
                {"key": "resourceId", "value": "", "disabled": true},
                {"key": "status", "value": "", "disabled": true},
                {"key": "dateFrom", "value": "", "disabled": true},
                {"key": "dateTo", "value": "", "disabled": true}
              ]
            }
          }
        },
        {
          "name": "Get Booking by ID",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": "{{baseUrl}}/bookings/1"
          }
        },
        {
          "name": "Cancel Booking",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "url": "{{baseUrl}}/bookings/1/cancel"
          }
        }
      ]
    }
  ]
}
